  <% if logged_in? %>
    <% if post.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
        <p><span>お気に入り解除: </span><%= link_to post.favorites.count, post_favorites_path(post.id), method: :delete, remote: true %></p>
    <% else %>
        <p><span>お気に入り登録: </span><%= link_to post.favorites.count, post_favorites_path(post.id), method: :post, remote: true %></p>
    <% end %>
  <% else %>
    <p><span>お気に入り数: </span><%= post.favorites.count %></p>
  <% end %>